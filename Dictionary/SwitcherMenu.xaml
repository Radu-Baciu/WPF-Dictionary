<UserControl x:Class="Dictionary.SwitcherMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dictionary"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800" Background="Aqua">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Content="Fun Mode" HorizontalAlignment="Left" Grid.Column="0" VerticalAlignment="Center" Width="100" Height="80" Click="funMode"/>
        <Button Content="Search Mode" HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Center" Width="100" Height="80" Click="searchMode"/>
        <Button Content="Admin Mode" HorizontalAlignment="Right" Grid.Column="4" VerticalAlignment="Center" Width="100" Height="80" Click="adminMode"/>
    </Grid>
</UserControl>
